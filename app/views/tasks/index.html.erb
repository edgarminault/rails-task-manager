<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task), :class => 'btn btn-success' %> <%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }, :class => 'btn btn-danger' %></li>
  <% end %>
</ul>

